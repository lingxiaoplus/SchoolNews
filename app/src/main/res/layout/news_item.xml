<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/cardview_default_elevation"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/iv_title"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:src="@color/colorAccent"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_margin="3dp"
                android:layout_toRightOf="@id/iv_title">
                <TextView
                    android:id="@+id/tv_title"
                    style="@style/cardTitle"
                    android:text="标题"
                    android:maxLines="2"
                    android:ellipsize="end"
                    />
                <TextView
                    android:id="@+id/tv_message"
                    style="@style/cardMessage"
                    android:text="内容"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.lingxiao.news.widget.ColorTextView
                android:id="@+id/colorTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:ctvBackground="@color/colorPrimary"
                app:ctvCornerSize="30"
                app:ctvText="我是原文本"
                app:ctvTextColor="@color/white"
                app:ctvTextSize="15sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-09-10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                />
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_img_svg_time"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@id/tv_time"/>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_img_svg_share"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@id/iv_time"/>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_img_svg_comment"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@id/iv_share"/>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>